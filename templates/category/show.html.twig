{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}

    <h2>Détail de la catégorie</h2>
    <h3>{{category.nom}} </h3>

    <form action="{{path('category_delete', {id:category.id})}}" 
        method="POST" 
        onsubmit="return confirm('Voulez-vous vraiment supprimer cette catégorie?')"
    >
        <a href="{{path('category_edit', {id:category.id})}}">Edition</a>
        <button>Supprimer</button>
    </form>
{% endblock %}
